
<% if task.favorite==true %>
    <%= form_with(model: task, url: favorite_task_path(id: task.id), local: true, method: :post) do |f| %>
      <%= hidden_field_tag :id, task.id %>
      <%= hidden_field_tag :favorite, false  %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-block' %>
    <% end %>
<% else %>
    <%= form_with(model: task, url: favorite_task_path(id: task.id), local: true, method: :post) do |f| %>
      
      <%= hidden_field_tag :id, task.id %>
      <%= hidden_field_tag :favorite, true %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-block' %>
    <% end %>
<% end %>

