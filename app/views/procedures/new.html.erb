<div class="content">
    <div class="row">
        <div class"offset-sm-4 col-sm-4"><h1><%=@task.content%>に手順の追加</h1></div>
    </div>
    <div class="row">
      <div class="offset-sm-3 col-sm-6">
        <%= form_with(model: @procedure, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            
            <%= f.label :content, '手順名' %>
            <%= f.text_field :content, class: "form_control" %>
          </div>

          <div class="form-group">
            
            <%= f.label :deadline, '手順の期限設定' %>
            <%= f.date_select :deadline, {include_blank: true, use_month_numbers: true} %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
</div>
